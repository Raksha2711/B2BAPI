            <ul class="social-icons">
                <li><a href="#"><img src="@Image.Render("~/images/ico-facebook.svg")" alt="facebook"></a></li>
                <li><a href="#"><img src="@Image.Render("~/images/ico-linkedin.svg")" alt="linkedin"></a></li>
                <li><a href="#"><img src="@Image.Render("~/images/ico-instagram.svg")" alt="instagram"></a></li>
                <li><a href="#"><img src="@Image.Render("~/images/ico-twitter.svg")" alt="twitter"></a></li>
            </ul>
        </div>
        <header id="site-header">
            <div class="wrap-fuild header__wrap">
                <div class="site-title">
                    <a href="index.html" rel="home">
                        <img src="@Image.Render("~/images/logo.png")" alt="">
                    </a>
                </div>
                <nav class="header__menu">
                    <ul>
                        <li class="current"><a href="index.html">Home</a></li>
                        <li><a href="javascript:void(0);">Products</a></li>
                        <li><a href="javascript:void(0);">Brands</a></li>
                    </ul>
                </nav>
                <ul class="menu__right">
                    <li class="search-ico"><a href="#"><img src="@Image.Render("~/images/ico-search.svg")" alt="search"></a></li>
                    <li><a class="btn btn--white" href="javascript:void(0);">Log In</a></li>
                    <li><a class="btn btn--blue btn--sm" href="javascript:void(0);">Sign Up - Free</a></li>
                </ul>
            </div>
        </header>
        <main id="site-main">
            @RenderBody()
